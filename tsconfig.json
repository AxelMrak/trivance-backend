{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@config/*": ["./src/config/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@entities/*": ["./src/entities/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@queries/*": ["./src/queries/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@routes/*": ["./src/routes/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"],
      "@validations/*": ["./src/validations/*"],
      "@migrations/*": ["./migrations/*"],
      "@scripts/*": ["./scripts/*"],
      "@test/*": ["./test/*"]
    }
  },
  "include": ["./*.js", "src/**/*.ts", "test/**/*.ts", "src/types"]
}
