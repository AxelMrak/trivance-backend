{
  "name": "Trivance API",
  "version": "1.0.0",
  "description": "Trivance API is a simple Express API starter template with TypeScript, PostgreSQL, and Zod for validation.",
  "main": "src/index.ts",
  "scripts": {
    "migrate": "node-pg-migrate",
    "seed": "node scripts/seederDb.js",
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "start:dist": "node dist/src/index.js",
    "lint": "eslint --fix src test",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "Trifecta",
  "repository": {
    "type": "git",
    "url": "https://github.com/w3cj/express-api-starter.git"
  },
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcrypt-ts": "^7.0.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^7.9.1",
    "pg": "^8.15.6",
    "uuid": "^11.1.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
